{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}

	<h1>Hello
		{{ controller_name }}! âœ…</h1>

	<div class="album py-5 bg-body-tertiary">
		<div class="container">
			<h2>Vos Articles :</h2>
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				{% for article in articles %}
					<div class="col">
						<div class="card shadow-sm">
							<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
								<title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>
							</svg>
							<div class="card-body">
								<p class="card-text">
									<h1>{{article.titreArticle|upper}}</h1>
								</p>
								<p>{{article.contenuArticle|slice(0,100)|raw}}...</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="{{ path('app_view_article', {'id': article.idArticle})}}">Voir</a>
									</div>
									<small class="text-body-secondary">{{article.dateCreation| date("d/m/Y")}}</small>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}

